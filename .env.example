# MCPO Configuration
MCPO_API_KEY=your-secure-api-key-here
MCPO_DOMAIN=mcpo.cfocoder.com
MCPO_HOT_RELOAD=true

# Optional: MCP Server API Keys (uncomment and set as needed)

# GitHub (for GitHub MCP server)
# GITHUB_PERSONAL_ACCESS_TOKEN=your-github-token

# Brave Search (for web search)
# BRAVE_API_KEY=your-brave-search-api-key

# PostgreSQL (for database operations)
# POSTGRES_CONNECTION_STRING=postgresql://user:password@host:port/database

# Slack (for Slack integration)
# SLACK_BOT_TOKEN=xoxb-your-bot-token
# SLACK_APP_TOKEN=xapp-your-app-token

# Weather API (for weather information)
# WEATHER_API_KEY=your-weather-api-key

# Docker Settings
COMPOSE_PROJECT_NAME=mcpo
DOCKER_BUILDKIT=1

# Timezone
TZ=America/New_York