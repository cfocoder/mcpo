{
  "mcpServers": {
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent memory and knowledge management across conversations"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "description": "Read and write files on the local filesystem"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "description": "GitHub repository management and operations",
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": ""
      }
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "description": "PostgreSQL database operations",
      "env": {
        "POSTGRES_CONNECTION_STRING": ""
      }
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite"],
      "description": "SQLite database operations"
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "description": "Web search using Brave Search API",
      "env": {
        "BRAVE_API_KEY": ""
      }
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "description": "Web automation and browser control"
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "description": "Slack workspace management",
      "env": {
        "SLACK_BOT_TOKEN": "",
        "SLACK_APP_TOKEN": ""
      }
    },
    "youtube-transcript": {
      "command": "npx",
      "args": ["-y", "@kimtaeyoon83/mcp-server-youtube-transcript"],
      "description": "Extract transcripts from YouTube videos"
    },
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone=America/New_York"],
      "description": "Current time and timezone operations"
    },
    "weather": {
      "command": "uvx", 
      "args": ["mcp-server-weather"],
      "description": "Weather information and forecasts",
      "env": {
        "WEATHER_API_KEY": ""
      }
    },
    "docker": {
      "command": "uvx",
      "args": ["mcp-server-docker"],
      "description": "Docker container management and operations"
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git"],
      "description": "Git repository operations and version control"
    },
    "exa": {
      "command": "npx",
      "args": [
        "-y",
        "exa-mcp-server"
      ],
      "description": "AI-powered web search and content analysis",
      "env": {
        "EXA_API_KEY": "b3d2e6f3-d152-4c30-8bf4-fc6fbe821523"
      }
    },
    "perplexity": {
      "command": "npx",
      "args": [
        "-y",
        "server-perplexity-ask"
      ],
      "description": "Perplexity AI conversational search and Q&A",
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    }
  }
}